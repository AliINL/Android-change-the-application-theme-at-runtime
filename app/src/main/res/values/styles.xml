<resources>
    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/blue_grey_500</item>
        <item name="backgroundColor">@color/grey_50</item>
        <item name="textColor">@color/black_text</item>
        <item name="secondaryTextColor">@color/black_text_secondary</item>
        <item name="dividersColor">@color/black_dividers</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey_800</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/light_green_500</item>
        <item name="backgroundColor">@color/grey_900</item>
        <item name="textColor">@color/white_text</item>
        <item name="secondaryTextColor">@color/white_text_secondary</item>
        <item name="dividersColor">@color/white_dividers</item>
    </style>

    <style name="AppThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorAccent">@color/lime_500</item>
        <item name="backgroundColor">@color/green_50</item>
        <item name="textColor">@color/black_text</item>
        <item name="secondaryTextColor">@color/black_text_secondary</item>
        <item name="dividersColor">@color/black_dividers</item>
    </style>

</resources>